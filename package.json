{
  "name": "FlexVolt",
  "version": "1.0.0",
  "description": "The companion app to FlexVolt EMG sensors for Android, Mac, and PC",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CatabeeScienceAndDesign/FlexVolt.git"
  },
  "dependencies": {
    "cordova-android": "^6.2.2",
    "cordova-ios": "~4.3.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^2.0.10",
    "gulp-concat": "^2.6.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.2",
    "ionic-plugin-keyboard": "~2.2.1"
  },
  "devDependencies": {
    "bower": "^1.8.2",
    "gulp-util": "^3.0.7",
    "shelljs": "^0.7.0"
  },
  "scripts": {
    "postinstall": "cordova prepare",
    "web": "rm -R docs/ && cp -R www/ docs/"
  },
  "cordova": {
    "platforms": [
      "ios",
      "android"
    ],
    "plugins": {
      "cordova-plugin-bluetooth-serial": {},
      "cordova-plugin-device": {},
      "cordova-plugin-ble-central": {
        "BLUETOOTH_USAGE_DESCRIPTION": "This app would like to scan for a FlexVolt sensor."
      },
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar": {},
      "ionic-plugin-keyboard": {},
      "cordova-plugin-splashscreen": {}
    }
  }
}